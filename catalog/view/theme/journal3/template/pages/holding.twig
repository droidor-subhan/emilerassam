<style>
.company_main_full_width_container {
    position: relative;
    width: 100%;
    min-height: 100vh;
    padding: 40px 15px 0px 15px !important;
    color: #fff;
    text-align: center;
    z-index: 1;
    margin-top: 10px;
    margin-bottom: 40px;
}
.company_main_full_width_container .bg-wrap {
    clip: rect(0, auto, auto, 0);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.company_main_full_width_container .bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("{{base_url}}{{content.company_image}}");
    background-size: contain;
    background-position: center 0px;
    transform: translateZ(0);
    will-change: transform;
    z-index: -1;
    background-repeat: no-repeat;
}

@media screen and (min-width: 1024px) {
    .company_main_full_width_container .bg {
        background-size: cover;
        {# position: sticky; #}
        {# height: 100vh; #}
    }
}
@media screen and (max-width: 1024px) {
    .company_main_full_width_container .bg {
            background-size: cover;
            background-position: left center !important;
    }
}
.company_main_full_width_container p {
    color: #FFF;
    font-size: 14px;
    line-height: 17px;
}
.timeline_main_container {
	margin: 0 auto;
	max-width: 1024px;
	width: 100%;
}
.main_image {
    width: 800px;
    margin: 45px auto 39px auto;
    max-width: 100%;
}
.foundation_image {
   width: 250px;
   margin: 50px;
   margin-bottom: 100px;
}
.four_image_group {
    width: 150px;
}
.four_group_container {
    padding: 15px;
    margin: 50px 0;
    display: flex;
    justify-content: center;
}
@media screen and (min-width: 768px) {
    .direction_flex {
        display: flex;
        justify-content: center;
    }
}
@media screen and (max-width: 768px) {
    .four_image_group {
        width: 100px;
    }
}
.icons_4_style {
    {# text-align: justify; #}
    padding: 5px;
}

</style>

