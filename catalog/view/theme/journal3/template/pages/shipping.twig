{{ header }}

{# COMPANY SECTION STARTS HERE #}
<style>
* {
    font-family: 'gill_sans_stdregular' !important;
}
button.btn.btn-shipping {
    background: #FFF;
    color: #000;
    padding: 15px 80px;
    font-size: 15px;
    font-family: 'gill_sans_stdregular';
}
.company_main_full_width_container {
    position: relative;
    width: 100%;
    min-height: 100vh;
    padding: 40px 15px 0px 15px !important;
    color: #fff;
    text-align: center;
    z-index: 1;
    margin-top: 30px;
    margin-bottom: 40px;
}
.company_main_full_width_container .bg-wrap {
    clip: rect(0, auto, auto, 0);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.company_main_full_width_container .bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("{{base_url}}{{content.company_image}}");
    background-size: cover;
    background-position: center 0px;
    transform: translateZ(0);
    will-change: transform;
    z-index: -1;
    background-repeat: no-repeat;
}

@media screen and (min-width: 1024px) {
    .company_main_full_width_container .bg {
        position: sticky;
        height: 100vh;
    }
}
.company_main_full_width_container p {
    color: #FFF;
    font-size: 14px;
    line-height: 17px;
}
.timeline_main_container {
	margin: 0 auto;
	max-width: 1024px;
	width: 100%;
}
</style>


