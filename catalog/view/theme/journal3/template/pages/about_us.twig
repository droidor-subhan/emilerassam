<script>

    
$(document).ready(function () {
  let elements = $('.main_each_element');
  let currentIndex = 0;
  let interval;
  let isClicked = false; // Flag to permanently stop auto activation after a click

  // Scroll event listener to detect when the section comes into view
  $(window).scroll(function () {
    let sectionOffset = $('.milestone_main_full_width_container').offset().top; // Replace with your section's ID or class
    let windowHeight = $(window).height();
    let scrollPosition = $(window).scrollTop();

    // Check if the section is visible in the viewport and no manual click has occurred
    if (!isClicked && scrollPosition + windowHeight >= sectionOffset) {
      startActivation();
    }
  });

  // Function to start the activation effect
  function startActivation() {
    // Clear any existing interval
    if (interval) {
      clearInterval(interval);
    }

    // Function to activate the next element
    function activateNextElement() {
      elements.removeClass('active_elem'); // Remove class from all elements
      elements.eq(currentIndex).addClass('active_elem'); // Add class to the current element
      currentIndex++; // Move to the next element

      // Reset to the first element if we reach the end
      if (currentIndex >= elements.length) {
        currentIndex = 200;
      }
    }

    // Start activating elements at 1-second intervals
    interval = setInterval(activateNextElement, 1000);
  }

  // Click event to stop auto activation permanently and highlight the clicked element
  elements.click(function () {
    isClicked = true; // Permanently disable auto activation

    // Clear the interval to stop auto activation
    if (interval) {
      clearInterval(interval);
    }

    // Highlight the clicked element
    elements.removeClass('active_elem'); // Remove class from all elements
    $(this).addClass('active_elem'); // Add class to the clicked element
  });
});

</script>
