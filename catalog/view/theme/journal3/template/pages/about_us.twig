	.timeline {
		position: relative;
		max-width: 1200px;
		margin: 0 auto;
	}
	.timeline::after {
		content: '';
    position: absolute;
    width: 1px;
    background-color: #0000004d;
    top: 15px;
    bottom: 0;
    left: 50%;
    margin-left: -3px;
	}

	/* Container around content */
	.container {
		padding: 0;
		position: relative;
		width: 50%;
		margin-right: 0;
		margin-left: 0;
		color: #7c7c7c;
		cursor: pointer;
		font-size: 22px;
	}
  .main_each_element:hover,
  .main_each_element:focus,
  .main_each_element:active,
  .main_each_element:target
   {
    color: #000;
    font-size: 35px;
  }

  .active_elem {
    color: #000;
    font-size: 35px;
  }

	/* The circles on the timeline */
	.container::after {
    content: '';
    position: absolute;
    width: 7px;
    height: 7px;
    right: -1px;
    background-color: #b2b2b2;
    top: 8px;
    z-index: 1;
}

	/* Place the container to the left */
	.left {
		left: 0;
		{# margin-top: -5px; #}
	}

	/* Place the container to the right */
	.right {
		left: 50%;
		{# margin-top: -5px; #}
	}


	/* Fix the circle for containers on the right side */
	.right::after {
		left: -6px;
	}

	/* The actual content */
	.content {
		padding: 20px 30px;
		position: relative;
		border-radius: 6px;

	}

	/* Media queries - Responsive timeline on screens less than 600px wide */
	@media screen and(max-width: 600px) {
		/* Place the timelime to the left */
		.timeline::after {
			left: 31px;
		}

		/* Full-width containers */
		.container {
			width: 100%;
			padding-left: 70px;
			padding-right: 25px;
		}

		/* Make sure that all arrows are pointing leftwards */
		.container::before {
			left: 60px;
			border: medium solid white;
			border-width: 10px 10px 10px 0;
			border-color: transparent white transparent transparent;
		}

		/* Make sure all circles are at the same spot */
		.left::after,
		.right::after {
			left: 15px;
		}

		/* Make all right containers behave like the left ones */
		.right {
			left: 0;
		}
	}

