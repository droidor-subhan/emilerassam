		$('#product_pdf').change(function(e) {
			 var fileInput = $(this);
        var file = e.target.files[0];

        if (!file) {
            return;
        }

        var allowedExtensions = ["png", "jpeg", "jpg"];
        var fileExtension = file.name.split('.').pop().toLowerCase();

        if (allowedExtensions.indexOf(fileExtension) === -1) {
            alert("Please select a PNG, JPEG, or JPG file.");
            fileInput.val('');
            return;
        }

        if (file.size > 15 * 1024 * 1024) {
            alert("The file is too large. Please select a file that is 15MB or smaller.");
            fileInput.val('');
            return;
        }

        // Display the uploaded image
        var reader = new FileReader();

        reader.onload = function(e) {
            // Create an <img> element and set its source and dimensions
            var imgElement = $('<img>')
                .attr('src', e.target.result)
                .attr('alt', 'Uploaded Image')
                .css({ 'max-width': '200px', 'max-height': '200px' }); // Set maximum dimensions

            // Append the image to the container
            $('#upload_file_container').empty().html(imgElement);
        };

        // Read the file as a data URL
        reader.readAsDataURL(file);
		});
	});

	$(document).ready(function() {
		$('#video_thumbnail').change(function(e) {
			var fileInput = $(this);
			var file = e.target.files[0];
			if (!file) {
				return;
			}
			var allowedExtensions = ["png", "jpeg", "jpg"];
			var fileExtension = file.name.split('.').pop().toLowerCase();
			if (allowedExtensions.indexOf(fileExtension) === -1) {
				alert("Please select a PNG, JPEG, or JPG file.");fileInput.val('');return;
			}
			if (file.size > 5 * 1024 * 1024) {
				alert("The file is too large. Please select a file that is 5MB or smaller.");fileInput.val('');return;
			}
		});

		$('#video_file').change(function(e) {
			var fileInput = $(this);
			var file = e.target.files[0];
			if (!file) {
				return;
			}
			var allowedExtensions = ["mp4"];
			var fileExtension = file.name.split('.').pop().toLowerCase();
			if (allowedExtensions.indexOf(fileExtension) === -1) {
				alert("Please select a .MP4 file.");fileInput.val('');return;
			}
			if (file.size > 50 * 1024 * 1024) {
				alert("The file is too large. Please select a file that is 50MB or smaller.");fileInput.val('');return;
			}
		});
	});
	</script>

