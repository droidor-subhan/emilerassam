{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        <li><a href="{{ home }}">{{ text_home }}</a></li>
        <li><a href="{{ catalog }}">{{ text_catalog }}</a></li>
        <li class="active">{{ heading_title }}</li>
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <i class="fa fa-download"></i> {{ text_export }}
                </h4>
              </div>
              <div class="panel-body text-center">
                <p>{{ text_export_description }}</p>
                <a href="{{ export_url }}" class="btn btn-info btn-lg">
                  <i class="fa fa-download"></i> {{ button_export }}
                </a>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="panel panel-success">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <i class="fa fa-upload"></i> {{ text_import }}
                </h4>
              </div>
              <div class="panel-body text-center">
                <p>{{ text_import_description }}</p>
                <a href="{{ import_url }}" class="btn btn-success btn-lg">
                  <i class="fa fa-upload"></i> {{ button_import }}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}